#version 460 core

in vec2 TexCoords;
out vec4 OutColour;

//texture data
uniform sampler2D TextureColour;
uniform sampler2D TextureColour2;		//second texture

void main() {
	// texture() accepts colour and coordinates to create an openGL texture
	//mix two texture with the alpha value of 0.6 applied to first texture assigned
	OutColour = mix(texture(TextureColour, TexCoords), texture(TextureColour2, TexCoords), 0.6);
}